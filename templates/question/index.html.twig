{% extends 'base.html.twig' %}

{% block title %}Hello QuestionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div>
        <a href="{{path('create_question')}}" class="btn btn-primary">Ajouter une question</a>
    </div>
        {% for question in questions %}
            <div>
                <p>Intitulé :
                </p>
                <p>{{question.question}}</p>
                <p>
                    <a href="{{path('edit_question',{'id':question.id})}}" class="btn btn-primary">Edit</a>
                </p>
                <p>
                    <a href="{{path('delete_question',{'id':question.id})}}" class="btn btn-primary">Delete</a>
                </p>
                <p>
                    <a href="{{path('create_answer',{'id':question.id})}}" class="btn btn-primary">Ajouter la bonne réponse</a>
                </p>
                <p>
                    <a href="{{path('create_false_answer',{'id':question.id})}}" class="btn btn-primary">Ajouter une mauvaise réponse</a>
                </p>
                {% include 'answer/index.html.twig' with {'question.id':question } %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
